<%- layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control">
        </div>
    
        <br/>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea class="form-control" name="listing[description]" placeholder="Enter Description" type="text"></textarea>
        </div>
        <br/>

        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
        <input class="form-control" name="listing[image]" placeholder="Enter image URL/Link" type="text">
        </div>

        <br/>
        <div class="row">
            <div class="mb-3 col-md 4">
                <label class="form-label" for="Price">Price</label>
            <input name="listing[price]" placeholder="Enter Price" type="number" class="form-control">
            </div>
    
            <br/>
            <div class="mb-3 col-md-8">
                <label class="form-label" for="country">Country</label>
            <input class="form-control" name="listing[country]" placeholder="Enter Country" type="text">
            </div>
        </div>
        <br/>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Enter Location" class="form-control" type="text">
        </div>

        <br/>
        <button class="btn btn-dark add-btn mt-3">ADD</button>
    </form>
</div>
</div>
</body>